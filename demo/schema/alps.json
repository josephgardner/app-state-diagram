{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Application Profile Schema",
  "type": "object",
  "readOnly": true,
  "required": [
    "alps"
  ],
  "properties": {
    "alps": {
      "allOf": [
        {"$ref": "app/alps.json"},
        {
          "properties": {
            "descriptor": {
              "$ref": "app/descriptor.json"
            }
          }
        }
      ]
    }
  }
}
